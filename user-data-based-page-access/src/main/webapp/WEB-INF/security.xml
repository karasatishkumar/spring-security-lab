<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<!-- Enabling Security annotation -->
	<global-method-security secured-annotations="enabled" />

	<!-- No security on css, js, images, etc... folder -->
	<http pattern="/resources/**" security="none" />
	<!-- <http pattern="/login" security="none" />
	<http pattern="/logout" security="none" /> -->

	<http auto-config="true">

		<http-basic />
		
		<intercept-url pattern="/index*" access="ROLE_USER" />

		<form-login login-page="/login" default-target-url="/index" authentication-failure-url="/login" />

		<anonymous enabled="true" />

		<!-- Anticipating on login logout issues -->
		<logout logout-success-url="/logout" delete-cookies="JSESSIONID" />

		<access-denied-handler error-page="/accessDenied" />

		<!-- <session-management invalid-session-url="/invalidSession"
			session-authentication-error-url="/invalidSession"
			session-fixation-protection="newSession">
			<concurrency-control max-sessions="1"
				error-if-maximum-exceeded="true" />
		</session-management> -->

	</http>

	<!-- URL Intercept is perform at the controller level -->

	<authentication-manager alias="authenticationManager"
		erase-credentials="true">
		<authentication-provider ref="pap"/>
	</authentication-manager>


</beans:beans>
